<button class="themeToggle" id="themeToggle">ðŸŒ— Dark mode</button>

<script>
  const quotes = [
    "Steel sings loudest when courage keeps the rhythm.",
    "Magic is a language; mispronounce it at your peril.",
    "Heroes are made between the roll and the resolve."
  ];
  document.getElementById("quoteLine").textContent =
    quotes[Math.floor(Math.random() * quotes.length)];

  document.querySelectorAll(".card").forEach(card=>{
    card.addEventListener("click",()=>card.classList.toggle("is-flipped"));
  });

  const toggle = document.getElementById("themeToggle");
  toggle.onclick = ()=>{
    document.body.dataset.theme =
      document.body.dataset.theme === "light" ? "dark" : "light";
  };
</script>
