  <script>
    // =========================
    // Theme: default dark; toggle to light
    // =========================
    const root = document.body;
    const themeToggle = document.getElementById("themeToggle");
    const themeStatus = document.getElementById("themeStatus");

    // Persist theme
    const savedTheme = localStorage.getItem("dndTheme");
    if (savedTheme === "light" || savedTheme === "dark") {
      root.setAttribute("data-theme", savedTheme);
    } else {
      root.setAttribute("data-theme", "dark");
    }

    function syncThemeUI() {
      const t = root.getAttribute("data-theme");
      const isDark = t === "dark";
      themeToggle.setAttribute("aria-pressed", String(isDark));
      themeToggle.querySelector("span").textContent = isDark ? "Dark Mode" : "Light Mode";
      themeStatus.textContent = "Theme: " + (isDark ? "Dark" : "Light");
    }
    syncThemeUI();

    themeToggle.addEventListener("click", () => {
      const current = root.getAttribute("data-theme");
      const next = current === "dark" ? "light" : "dark";
      root.setAttribute("data-theme", next);
      localStorage.setItem("dndTheme", next);
      syncThemeUI();
    });

    // =========================
    // Rotating flavor quotes (epic + tavern-witty + arcane)
    // =========================
    const quoteBox = document.getElementById("quoteBox");
    const newQuote = document.getElementById("newQuote");
    const quotes = [
      { head: "Epic Decree", body: "‚ÄúSteel sings loudest when courage keeps the rhythm.‚Äù" },
      { head: "Tavern Wisdom", body: "‚ÄúNever trust a smiling bard‚Ä¶ unless the snacks are good.‚Äù" },
      { head: "Arcane Notice", body: "‚ÄúA rune ignored is a lesson repeated.‚Äù" },
      { head: "Epic Decree", body: "‚ÄúHeroes are made between the roll and the resolve.‚Äù" },
      { head: "Tavern Wisdom", body: "‚ÄúIf the plan fails, blame the goblin. Works every time.‚Äù" },
      { head: "Arcane Notice", body: "‚ÄúSpeak softly. Cast precisely. Take notes.‚Äù" }
    ];

    function setQuote(q) {
      quoteBox.innerHTML = `<p><strong>${q.head}:</strong> ${q.body}</p>`;
    }

    function randomQuote() {
      const q = quotes[Math.floor(Math.random() * quotes.length)];
      setQuote(q);
    }

    newQuote.addEventListener("click", randomQuote);

    // Auto pick one on load (but keep deterministic-ish feel)
    randomQuote();

    // =========================
    // ‚ÄúEdit links‚Äù helper
    // =========================
    document.getElementById("editLinksHelp").addEventListener("click", (e) => {
      e.preventDefault();
      alert(
        "To change where each card goes, edit the href values in the HTML:\n\n" +
        "Dice Roller ‚Üí href=\"dice.html\"\n" +
        "Initiative ‚Üí href=\"initiative.html\"\n" +
        "Character Sheet ‚Üí href=\"character-sheet.html\"\n" +
        "Town Generator ‚Üí href=\"town-generator.html\"\n" +
        "Character Generator ‚Üí href=\"character-generator.html\"\n" +
        "Shop Generator ‚Üí href=\"shop-generator.html\"\n\n" +
        "You can also point them to full URLs (https://...)."
      );
    });

    // =========================
    // Slots/placeholders (your ‚Äúfuture-proofing‚Äù)
    // - If you later want to inject widgets or badges, target elements by [data-slot="..."]
    // =========================
    // Example (later): document.querySelector('[data-slot="dice"]')...
  </script>
